{
  "name": "C++ OpenTelemetry Service",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "vadimcn.vscode-lldb"
      ],
      "settings": {
        "debug.allowBreakpointsEverywhere": true,
        "cmake.sourceDirectory": "${containerWorkspaceFolder}/services/cpp"
      }
    }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "bash .devcontainer/cpp/install-dependencies.sh",
  "remoteUser": "vscode",
  "remoteEnv": {
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317"
  }
}