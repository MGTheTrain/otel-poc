{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust Service",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/services/rust/target/debug/rust-otel-service",
            "args": [],
            "cwd": "${workspaceFolder}/services/rust",
