        {
            "name": "Debug C++ Service",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/services/cpp/build/cpp-otel-service",
            "args": [],
            "cwd": "${workspaceFolder}/services/cpp",
            "preLaunchTask": "cmake build cpp"
        }
    ]
}